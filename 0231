class Solution {
public:
    bool isPowerOfTwo(int n) {
        if(n==0) return false;
        if(n==1) return true;
        while(n!=0){
            if(n/2==1&&n%2==0) return true;
            if(n%2!=0) return false;
            else{
                n=n/2;
            }
        }
        return false;
    }
};
